@model Restaurant_Reviews.Models.Restaurant
@{
    ViewBag.Title = "AddRestaurant";
}

<h2>Add a Restaurant</h2>
@using (Html.BeginForm(FormMethod.Post))
{
    @Html.LabelFor(x => x.Name)
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" }) <br />
    @Html.LabelFor(x => x.City)
    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })<br />
    @Html.LabelFor(x => x.State)
    @Html.TextBoxFor(x => x.State, new { @class = "form-control" })<br />
    @Html.LabelFor(x => x.LogoUrl)
    @Html.TextBoxFor(x => x.LogoUrl, new { @class = "form-control" })<br />
    @Html.LabelFor(x => x.CuisineTags)
    @Html.TextBoxFor(x => x.CuisineTagsRaw, new { @class = "form-control" }) <br />
    @Html.HiddenFor(x => x.Id)
    <button type="submit" class="btn btn-primary">Submit</button>
}