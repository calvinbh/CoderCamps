@model Restaurant_Reviews.Models.Restaurant
@{
    ViewBag.Title = "ViewRestaurant";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h2>@Model.Name</h2>
        @if (Model.Ratings != null)
        {

            for (var i = 0; i < Model.AverageStars; i++)
            {
                <div class="glyphicon glyphicon-star label-primary"></div>
            }
        }
    </div>
    <div class="panel-body">
        <img src="@Model.LogoUrl" />
        <p>(@Model.City, @Model.State)</p>
        <ul>
            @foreach (var tag in Model.CuisineTags)
            {
                <li>@tag</li>
            }
        </ul>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Review " + Model.Name, "AddReview", new { id = Model.Id })
        @if (Model.Ratings != null)
        {

            foreach (var review in Model.Ratings)
            {
                <div class="well">

                    @for (var i = 0; i < review.Stars; i++)
                    {<div class="glyphicon glyphicon-star"></div>}
                    @review.Author

                    <p>@review.Review</p>
                    @Html.ActionLink("Delete Review", "DeleteReview", new { restaurantId = Model.Id, reviewId = review.Id }, new { @class = "btn btn-warning" })
                </div>
            }
        }
    </div>
</div>